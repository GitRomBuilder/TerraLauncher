<UserControl x:Class="TerraLauncher.Controls.Terraria.TerrariaSetupOptionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TerraLauncher.Controls.Terraria"
             mc:Ignorable="d" Width="36" Height="36" Margin="0,0,5,0">
    <local:TerrariaButton MouseUp="OnButton" Padding="4">
        <local:TerrariaButton.ToolTip>
            <local:TerrariaTooltip x:Name="tooltip"/>
        </local:TerrariaButton.ToolTip>
        <Image x:Name="image" Width="28" Height="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </local:TerrariaButton>
</UserControl>
